{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist"
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["./dist", "./node_modules"]
}
